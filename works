    <script>
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        document.addEventListener('DOMContentLoaded', function() {
            const currentPage = window.location.pathname.split('/').pop() || 'index.html'; // Default to index if path is '/'
            const navLinks = document.querySelectorAll('nav ul li a');
            navLinks.forEach(link => {
                link.classList.remove('active');
                // More robust check for active link
                const linkHref = link.getAttribute('href').split('/').pop();
                if (linkHref === currentPage || (currentPage === 'index.html' && linkHref === '')) {
                    link.classList.add('active');
                }
            });

            const fadeElements = document.querySelectorAll('.fade-in');
            fadeElements.forEach((el, index) => {
                if (!el.style.animationDelay) {
                    el.style.animationDelay = (0.15 * (index + 1)) + 's';
                }
            });

            const nav = document.querySelector('nav');
            window.addEventListener('scroll', function() {
                if (window.scrollY > 50) {
                    nav.style.paddingTop = '0.5rem';
                    nav.style.paddingBottom = '0.5rem';
                    nav.style.backgroundColor = 'rgba(12,12,12,0.85)';
                } else {
                    nav.style.paddingTop = '1rem';
                    nav.style.paddingBottom = '1rem';
                    nav.style.backgroundColor = 'rgba(18, 18, 18, 0.8)';
                }
            });
        });
    </script>
